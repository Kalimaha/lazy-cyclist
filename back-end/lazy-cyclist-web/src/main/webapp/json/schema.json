{
  "$schema": "http://json-schema.org/draft-04/hyper-schema#",
  "type": "object",
  "title": "Lazy Cyclist",
  "description": "Help the lazy cyclist pick the easiest route.",
  "links": [
    {
      "href": "/",
      "method": "GET",
      "rel": "schema",
      "title": "Schema",
      "description": "Description of the available endpoints."
    },
    {
      "href": "/route/{from}/{to}/",
      "method": "GET",
      "rel": "route",
      "title": "Route",
      "description": "Calculates the routes between two addresses.",
      "schema": {
        "type": "object",
        "title": "Input",
        "description": "Definition of the input parameters.",
        "properties": {
          "from": {
            "type": "string",
            "title": "From",
            "description": "Starting address, e.g. Federation Square, Melbourne, Australia"
          },
          "to": {
            "type": "string",
            "title": "From",
            "description": "Destination address, e.g. 511 Church St, Melbourne, Australia"
          }
        }
      },
      "targetSchema": {
        "type": "array",
        "title": "Input",
        "description": "Definition of the output.",
        "items": {
          "type": "object",
          "title": "Elevation Profile",
          "description": "Information about the route.",
          "properties": {
            "points": {
              "type": "array",
              "title": "Points",
              "description": "Cartesian coordinates of the elevation profile",
              "items": {
                "type": "object",
                "title": "XY",
                "description": "Cartesian coordinate.",
                "properties": {
                  "x": {
                    "type": "number",
                    "title": "X",
                    "description": "X-axis coordinate"
                  },
                  "y": {
                    "type": "number",
                    "title": "X",
                    "description": "X-axis coordinate"
                  }
                }
              }
            },
            "climbs": {
              "type": "array",
              "title": "Climbs",
              "description": "Climb segments of the route.",
              "items": {
                "type": "object",
                "title": "Segment",
                "description": "Description of the climb.",
                "properties": {
                  "start": {
                    "type": "object",
                    "title": "Start point",
                    "description": "Cartesian coordinates of the start point.",
                    "properties": {
                      "x": {
                        "type": "number",
                        "title": "X",
                        "description": "X-axis coordinate"
                      },
                      "y": {
                        "type": "number",
                        "title": "X",
                        "description": "X-axis coordinate"
                      }
                    }
                  },
                  "end": {
                    "type": "object",
                    "title": "End point",
                    "description": "Cartesian coordinates of the end point.",
                    "properties": {
                      "x": {
                        "type": "number",
                        "title": "X",
                        "description": "X-axis coordinate"
                      },
                      "y": {
                        "type": "number",
                        "title": "X",
                        "description": "X-axis coordinate"
                      }
                    }
                  },
                  "slope": {
                    "type": "number",
                    "title": "Slope",
                    "description": "Climb's slope [percentage]."
                  }
                }
              }
            },
            "totalDistance": {
              "type": "number",
              "title": "Total Distance",
              "description": "Distance of the whole route."
            },
            "averageSlope": {
              "type": "number",
              "title": "Average Slope",
              "description": "Average of the route's slopes."
            }
          }
        }
      }
    }
  ]
}
